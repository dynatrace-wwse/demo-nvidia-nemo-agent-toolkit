# Enable the exporting of traces via OpenTelemetry
general:
  telemetry:
    tracing:
      otelcollector:
        _type: otelcollector
        # The endpoint where you have deployed the otel collector
        endpoint: "${OTEL_OTLP_ENDPOINT:-http://localhost:4318}/v1/traces"
        project: nat_workflow

functions:
  web_search:
    _type: tavily_internet_search
    description: "Search the web for current information. Use this tool for any questions that require up-to-date information from the internet."
    max_results: 5
  current_datetime:
    _type: current_datetime

llms:
  nim_llm:
    _type: nim
    model_name: meta/llama-3.1-70b-instruct
    base_url: NVIDIA_MODEL_ENDPOINT_8001_PLACEHOLDER
    temperature: 0.1

embedders:
  nv-embedqa-e5-v5:
    _type: nim
    model_name: nvidia/nv-embedqa-e5-v5
    base_url: NVIDIA_MODEL_ENDPOINT_8004_PLACEHOLDER

workflow:
  _type: react_agent
  tool_names: [web_search, current_datetime]
  llm_name: nim_llm
  verbose: false
  parse_agent_response_max_retries: 3